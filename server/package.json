{
  "name": "visflow-server",
  "version": "1.0.0",
  "description": "VisFlow server",
  "author": "Bowen Yu",
  "license": "BSD-3-Clause",
  "private": true,
  "scripts": {
    "serve": "yarn build && NODE_ENV=production node dist/server.js",
    "start": "yarn build && node dist/server.js",
    "build": "tsc -p tsconfig.build.json",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "watch-build": "tsc -w -p tsconfig.build.json",
    "watch-node": "nodemon dist/server.js",
    "watch-lint": "nodemon -x yarn lint",
    "watch": "concurrently -k -n lint,build,server -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-lint\"  \"yarn watch-build\" \"yarn watch-node\"",
    "test": "jest --forceExit --coverage",
    "test-openhandles": "jest --detectOpenHandles --coverage",
    "watch-test": "jest --watch"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-mongo": "^2.0.1",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.2.0",
    "fs-extra": "^6.0.1",
    "lodash": "^4.17.4",
    "lusca": "^1.5.2",
    "mongoose": "^5.13.15",
    "morgan": "^1.9.0",
    "multer": "^1.3.1",
    "nodemailer": "^4.6.7",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/cors": "^2.8.4",
    "@types/crypto-js": "^3.1.41",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/fs-extra": "^5.0.3",
    "@types/jest": "^22.1.3",
    "@types/lodash": "^4.14.91",
    "@types/lusca": "^1.5.0",
    "@types/mongodb": "^3.0.5",
    "@types/mongoose": "^5.0.18",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^9.4.6",
    "@types/nodemailer": "^4.3.4",
    "@types/passport": "^0.4.3",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.47.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^23.3.0",
    "nodemon": "^1.13.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  }
}
